<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.giso.tadm_game.Menu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imagen"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/l1"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/asteroid"
            android:src="@drawable/asteroid"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"/>

        <ImageButton
            android:id="@+id/nuevoJuego"
            android:background="@drawable/playnow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/asteroid"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"/>

        <ImageButton
            android:id="@+id/puntaje"
            android:background="@drawable/highscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/nuevoJuego"
            android:layout_margin="16dp"/>
    </RelativeLayout>
